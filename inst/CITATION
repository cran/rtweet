citHeader("To cite rtweet use:")

citEntry(
  entry        = "Manual",
  title        = "rtweet: Collecting Twitter Data in R",
  author       = as.person("Michael Wayne Kearney"),
  year         = "2016",
  note         = "R package version 0.1.0",
  url          = "https://github.com/mkearney/rtweet",
  key          = "rtweet-package",
  textVersion  = paste(
    "Kearney, M. W. (2016). rtweet: Collecting Twitter",
    "Data in R. R package version 0.1.0. Retrieved from",
    "https://github.com/mkearney/rtweet",
    sep = "\n")
)
